<Application x:Class="ColorRoseWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ColorRoseWPF"
             xmlns:model="clr-namespace:ColorRoseWPF.Models"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <model:Locator x:Key="Locator" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Content/Themes/NavigationMenuTheme.xaml" />
                <ResourceDictionary Source="Content/Themes/ColorControlTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
