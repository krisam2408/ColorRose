<UserControl x:Class="ColorRoseWPF.Views.Controls.ColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorRoseWPF.Views.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Name}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" />
        <Slider Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}" Value="{Binding Value}" Grid.Column="0" Grid.Row="1"  />
        <TextBlock Text="{Binding Value}" Grid.Column="1" Grid.Row="1" />
    </Grid>
</UserControl>
